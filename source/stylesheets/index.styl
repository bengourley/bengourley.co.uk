.available
  text-align center

.available__banner
  background $color--blue
  color $color--white
  padding 1em .5em
  font-weight 300
  font-size 1.25em
  line-height 1
  text-transform uppercase
  margin-bottom .5em

  &:before
  &:after
    content '×'
    font-size .5em
    padding .5em 1em
    vertical-align middle

.available__strapline
  font-size .75em

.card
  margin-bottom 2em

.card__description
  font-size .75em
  line-height 1.7

.card__title
  margin .5em 0

.contact
  text-align center

.contact__prefix
  display inline-block
  font-size .75em
  text-transform uppercase
  border-bottom 2px solid $color--grey
  margin-bottom 1em

.contact__detail
  margin-bottom 2em

  @media (min-width: 800px)
    margin-bottom 0

.footer
  border-top 1px solid lighten($color--grey, 80%)
  font-size .75em
  padding 3em 0
  font-weight 300
  text-align center

.open-source
  text-align center

.open-source__center
  display inline-block
  font-weight 300
  border 1px solid lighten($color--grey, 80%)
  border-left none
  border-right none
  padding 1em

